    "doc_type": "lk_news",
    "doc_id": "2025-09-19-dailyftlk-572c2a89",
    "num": "dailyftlk-572c2a89",
    "date_str": "2025-09-19",
    "description": "Crossing the Tax Rubicon",
    "url_metadata": "https://www.ft.lk/columns/Crossing-the-Tax-Rubicon/4-781891",
