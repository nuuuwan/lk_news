    "num": "dailyftlk-10f04f1a",
    "date_str": "2025-09-19",
    "description": "Nobility of professions is  being traded for silver and gold",
    "url_metadata": "https://www.ft.lk/columns/Nobility-of-professions-is-being-traded-for-silver-and-gold/4-781887",
    "lang": "en",
    "newspaper_id": "dailyftlk",
